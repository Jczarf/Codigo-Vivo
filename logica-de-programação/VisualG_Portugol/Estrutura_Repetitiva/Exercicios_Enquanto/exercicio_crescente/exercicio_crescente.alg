algoritmo "exercicio_crescente"

var

x, y : inteiro


inicio

escreva("Digite dois numeros : ")
leia(x)
leia(y)

enquanto x <> y faca

    se x > y entao 
        escreval ("DECRESCENTE")
    senao
        escreval ("CRESCENTE")
    fimse
    
    escreval("Digite outros dois numeros : ( Digite dois numeros iguais para sair. )")
    leia(x)
    leia(y)
    


fimenquanto





fimalgoritmo